<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/lv_row_padding"
    android:background="@drawable/selector_item_user"
    >

  <ImageView
      android:id="@+id/avatar"
      android:layout_width="@dimen/lv_row_icon_width"
      android:layout_height="@dimen/lv_row_icon_width"
      android:src="@mipmap/ic_launcher"
      android:contentDescription="@string/prompt_content_description"
      />

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:textSize="@dimen/lv_row_text_size"
      android:textColor="@android:color/black"
      android:gravity="center_vertical"
      android:maxLines="1"
      android:ellipsize="end"
      />

</LinearLayout>